{
  "manifest_version": 3,
  "name": "Recent Bookmarks",
  "version": "1.0.0",
  "description": "A modern bookmark manager with search, filtering, and dark mode",
  "homepage_url": "https://github.com/Newman5/new-bookmarks",
  "icons": {
    "48": "icons/bookmark-it.png",
    "96": "icons/bookmark-it@2x.png"
  },

  "permissions": ["bookmarks", "storage"],

  "action": {
    "default_icon": "icons/star-filled-38.png",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  }
}
