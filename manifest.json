{
  "manifest_version": 2,
  "name": "Recent Bookmarks",
  "version": "0.2",
  "description": "A simple recent bookmarks button",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/bookmark-it",
  "icons": {
    "48": "icons/bookmark-it.png",
    "96": "icons/bookmark-it@2x.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],

  "permissions": [
    "bookmarks"
  ],

  "browser_action": {
"default_icon": "icons/star-filled-38.png",
  "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  }

}